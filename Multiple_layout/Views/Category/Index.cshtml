
@model PaginatedList<Category>
@{
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form method="post">
    <input type="text"  name="cat"/>
    <input type="submit" value="Search" asp-action="Index" asp-controller="Category" />
    <br/>
    <table> 
        <tr>
            <thead>
                <tr>
                    <th>Category Name</th>
                </tr>
                
            </thead>
        <tbody>
                @foreach (var itm in Model)
                {


                    <tr>
                        <td>@itm.C_name</td>
                    </tr>
                   
                   
                }
        </tbody>
    </table>

    @{
        var preDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

    }
    <a action="Admin_viewfile" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-outline-danger @preDisabled">
        Previous
    </a>
    <a action="Admin_viewfile" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-outline-danger @nextDisabled">
        Next
    </a>



    @* <input type="submit" value="Submit" asp-action="Index" asp-controller="Category"/> *@
    </form>
     
