@model IEnumerable<ItemViewModel>
@{
    Layout = "~/Views/Shared/Admin_layout.cshtml";
       }
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a asp-action="Create" asp-controller="Item">create</a>
<form method="post">
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
               
                <th>Category_name</th>
               
                <th>Production_name</th>
                
                <th>Item_name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var itm in Model)
                {
                    <tr>
                       
                        <td>@itm.C_name</td>
                        
                        <td>@itm.P_name</td>
                        
                        <td>@itm.I_Name</td>

                        <td><a class="link link-primary" asp-action="Edit"  asp-route-id="@itm.I_id">edit</a></td>
                        
                </tr>
                }
            </tbody>
        </table>
    </div>
</form>

